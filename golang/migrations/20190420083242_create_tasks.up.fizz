create_table("tasks") {
	t.Column("id", "integer", {primary: true})
	t.Column("task_id", "integer", {null:true})
	t.Column("project_id","string",{})
	t.Column("name", "string",{null:false})
	t.Column("description", "string",{null:true})
	t.Column("progress","float",{"scale": 4, "precision": 2 , default:0})
	t.Column("closed","bool",{default:false})
	t.ForgeinKey("project_id",{"projects": ["id"]}, {"on_delete": "cascade"})
	t.ForgeinKey("task_id",{"tasks": ["id"]}, {"on_delete": "cascade"})
}
